    <div class="d-flex flex-row justify-content-center my-5">
        <div class="col mx-2">
            <div class="card" style="width: 18rem;">
                <img src="../images/images (2).jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Gel Nail paint both hands at just Rs. 499/-</h5>

                    <a href="@Url.Action("serviceForm", "Bookings", new { service = "Manicure" })" class="btn btn-primary my-3">Book Appointment</a>
